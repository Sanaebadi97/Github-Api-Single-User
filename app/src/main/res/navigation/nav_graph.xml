<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="github.com.githubuser.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment"

            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim" />
        <argument
            android:name="name"
            android:defaultValue="None"
            app:argType="string" />
        <argument
            android:name="website"
            android:defaultValue="None"
            app:argType="string" />
        <argument
            android:name="bio"
            android:defaultValue="None"
            app:argType="string" />
        <argument
            android:name="image"
            android:defaultValue="None"
            app:argType="string" />
        <action
            android:id="@+id/action_homeFragment_to_networkFragment"
            app:destination="@id/networkFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="github.com.githubuser.ui.fragment.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >


        <action
            android:id="@+id/action_detailsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <argument
            android:name="login"
            app:argType="string"
            android:defaultValue="None" />

        <action
            android:id="@+id/action_detailsFragment_to_reposListFragment"
            app:destination="@id/reposListFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />

    </fragment>
    <fragment
        android:id="@+id/networkFragment"
        android:name="github.com.githubuser.ui.fragment.NetworkFragment"
        android:label="NetworkFragment" >
        <action
            android:id="@+id/action_networkFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/reposListFragment"
        android:name="github.com.githubuser.ui.fragment.ReposListFragment"
        android:label="fragment_repos_list"
        tools:layout="@layout/fragment_repos_list" >

    </fragment>
</navigation>